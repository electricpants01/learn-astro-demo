---
import {loadRemoteImage} from "astro/dist/assets/build/remote";
const pageTitle: string = "About me"

const identity = {
    firstName: "Christian",
    country: "Bolivia",
    occupation: "Software engineer",
    hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;
---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{pageTitle}</title>
    <style>
        h1 {
            color: purple;
            font-size: 4rem;
        }
    </style>
</head>
<body>
<h1>{pageTitle}</h1>

<a href="/">Home</a>
<a href="/about">About</a>
<a href="/blog">Blog</a>

<h2>Here are a few facts about me:</h2>

<ul>
    <li>My name is {identity.firstName}</li>
    <li>I live in {identity.country}. And I work as a {identity.occupation}</li>
    <li>My hobbies are: {identity.hobbies.join(", ")}</li>
</ul>
<p>My Skills are:</p>
<ul>
    {skills.map((skill) =>
            <li>{skill}</li>)}
</ul>

{happy && <p>I am happy to learn Astro</p>}
{finished && <p>I finished this part of the tutorial!</p>}
{goal >= 3 ? <p>My goal is to finish in 3 days</p> : <p>My goal is less than 3 days</p> }
</body>
</html>
